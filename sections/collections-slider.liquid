{{ 'collections-slider.css' | asset_url | stylesheet_tag }}

<section id="collections-slider-section" class="container">
  <div id="collections-slider" class="collection-slider-section">
    <div class="collection-content-container">
      {% for collection in section.settings.selected_collections %}
        <div class="collection-content-item tab">
          <button class="tablinks" onclick="openCollection(event, '{{ collection.id }}')">
            <h3 class="collection-title">{{ collection.title }}</h3>
          </button>
          <p class="collection-amount">{{ collection.products_count }}</p>
        </div>
      {% endfor %}
    </div>

    <div class="collection-text-container">
      <p class="collection-text">{{ section.settings.collection_description }}</p>
    </div>
  </div>

  <div id="collections-swiper" class="swiper-container align-center">
    <div class="swiper-wrapper">
      {% for collection in section.settings.selected_collections %}
        {% for product in collection.products %}
          <div class="swiper-slide tabcontent {{ collection.id }}">
            <a class="no-decor" href="{{ product.url }}">
              <div class="product-container">
                <div class="product-image-container">
                  <img
                    src="{{ product.featured_image | image_url }}"
                    alt="{{ product.title }}"
                    width="auto"
                    height="auto"
                  >
                </div>
                <div class="product-text-container">
                  <h3 class="product-title">{{ product.title }}</h3>
                  <p class="product-weight">
                    {{ product.variants.first.weight }}
                    {{ product.variants.first.weight_unit }}
                  </p>
                  <p class="product-price">{{ product.price | money }}</p>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      {% endfor %}
    </div>

    <div class="arrow-container">
      <div class="gap">
        <div class="arrow-left">
          <img src="{{ 'arrow-left-small.png' | asset_url }}" alt="Previous" width="100%" height="100%">
        </div>
        <div class="arrow-right">
          <img src="{{ 'arrow-right-small.png' | asset_url }}" alt="Next" width="100%" height="100%">
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  let activeSwiper = null;

  document.addEventListener('DOMContentLoaded', function () {
    const firstTab = document.querySelector('.tablinks');
    const firstCollectionId = firstTab.getAttribute('onclick').match(/'([^']+)'/)[1];
    openCollection({ currentTarget: firstTab }, firstCollectionId);
  });

  function openCollection(evt, collectionId) {
    const tabcontent = document.getElementsByClassName('tabcontent');
    for (let i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = 'none';
    }

    const tablinks = document.getElementsByClassName('tablinks');
    for (let i = 0; i < tablinks.length; i++) {
      tablinks[i].classList.remove('active');
    }

    const selectedProducts = document.getElementsByClassName(collectionId);
    for (let i = 0; i < selectedProducts.length; i++) {
      selectedProducts[i].style.display = 'block';
    }

    evt.currentTarget.classList.add('active');

    if (activeSwiper) {
      activeSwiper.destroy(true, true);
    }

    activeSwiper = new Swiper('#collections-swiper', {
      slidesPerView: 1,
      spaceBetween: 15,
      loop: true,
      navigation: {
        nextEl: '.arrow-right',
        prevEl: '.arrow-left',
      },
      autoplay: {
        delay: 3000,
      },
      breakpoints: {
        1024: { slidesPerView: 4 },
        768: { slidesPerView: 2 },
        400: { slidesPerView: 1 },
      },
      pagination: false,
    });
  }
</script>

{% schema %}
{
  "name": "Collections Slider",
  "settings": [
    {
      "type": "textarea",
      "id": "collection_description",
      "label": "Collection Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur a nunc ultrices, feugiat augue vitae, accumsan quam."
    },
    {
      "type": "collection_list",
      "id": "selected_collections",
      "label": "Select Collections"
    }
  ],
  "presets": [
    {
      "name": "Collections Slider",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
