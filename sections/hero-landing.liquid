{{ 'hero-landing.css' | asset_url | stylesheet_tag }}

<section class="hero-slider">
  <div class="swiper-container-hero">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide  hero-slider__item">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.title }}"
              class="hero-img"
              width="100%"
              height="100%"
            >
          {% else %}
            <img
              src="{{'banner.png' | asset_url }}"
              alt="Banner image"
              class="hero-img"
              width="100%"
              height="100%"
            >
          {% endif %}
          <div class="hero-slider__item-caption" style="text-align: {{ block.settings.title_alignment }};">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.text }}</p>
            <button class="button button-default">{{- block.settings.button_text -}}</button>
          </div>
        </div>
        <div class="hero-slider__arrows">
          <div class="arrow-left-hero">
            <img src="{{ 'icon-arrow-left.svg' | asset_url }}" alt="Previous" width="100%" height="100%">
          </div>

          <div class="arrow-right-hero autoplay-progress">
            <svg viewBox="0 0 60 60">
              <circle cx="30" cy="30" r="29.5"></circle>
            </svg>
            <span></span>
            <img src="{{ 'icon-arrow-right.svg' | asset_url }}" alt="Next" width="100%" height="100%">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const progressCircle = document.querySelector('.autoplay-progress svg');
    const progressContent = document.querySelector('.autoplay-progress span');
    const swiper = new Swiper('.swiper-container-hero', {
      slidesPerView: 1,
      spaceBetween: 10,
      loop: true,
      pagination: false,
      navigation: {
        nextEl: '.arrow-right-hero',
        prevEl: '.arrow-left-hero',
      },
      on: {
        autoplayTimeLeft(s, time, progress) {
          progressCircle.style.setProperty('--progress', 1 - progress);
        },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Hero Section for Landing",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "default": "ULTIMATE CREATINE 250g"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Slide Text",
          "default": "THE HEALTH PROJECT"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Buy now $24.99"
        },
        {
          "type": "select",
          "id": "title_alignment",
          "label": "Title Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "left"
        },
        {
          "type": "select",
          "id": "button_alignment",
          "label": "Button Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "left"
        },
        {
          "type": "checkbox",
          "id": "hide_button",
          "label": "Hide Button",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section for Landing",
      "category": "Custom Sections",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "title": "ULTIMATE CREATINE 250g",
            "text": "THE HEALTH PROJECT",
            "button_text": "Buy now $24.99"
          }
        }
      ]
    }
  ]
}
{% endschema %}
