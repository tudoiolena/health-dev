<section id="slider-container">
  <div class="swiper-container-vertical-wrapper">
    <div class="swiper-container-vertical">
      <div class="swiper-scrollbar custom-scrollbar"></div>
      <div class="swiper-wrapper">
        <div class="swiper-slide vertical slide">
          <h3 class="vertical-slider-product-title">The Health Project Ultimate Whey Protein</h3>
          <p class="vertical-slider-product-weight">2000 g</p>
          <p class="vertical-slider-product-description">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur a nunc ultrices, feugiat augue vitae,
            accumsan quam. In auctor sem nunc, ac iaculis lacus dignissim nec.
          </p>
