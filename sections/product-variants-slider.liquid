        <div class="swiper-slide vertical slide">Slide 2</div>
        <div class="swiper-slide vertical slide">Slide 3</div>
      </div>
    </div>

    <div class="vertical-navigation">
      <div class="vertical-prev">
        <img src="{{ 'icon-arrow-up.svg' | asset_url }}" alt="Arrow up" width="100%" height="100%">
      </div>
      <div class="vertical-next">
        <img src="{{ 'icon-arrow-down.svg' | asset_url }}" alt="Arrow up" width="100%" height="100%">
